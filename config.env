# 基础配置
CONFIG_ENV=config.env

# 你的内核源码仓库地址
KERNEL_SOURCE=https://github.com/2011169588/Xiaomi_Kernel_OpenSource
KERNEL_SOURCE_BRANCH=haydn-r-oss

# 内核配置文件路径（使用 vendor/haydn_QGKI.config，注意后缀是 .config）
KERNEL_CONFIG=vendor/haydn_QGKI.config

# 内核镜像名称（5.4 内核通常为 Image.gz-dtb）
KERNEL_IMAGE_NAME=Image.gz-dtb

# 架构
ARCH=arm64

# 是否在文件名中添加本地版本
ADD_LOCALVERSION_TO_FILENAME=false

# 额外编译命令
EXTRA_CMDS:LD=ld.lld

# 编译器设置（使用 AOSP 默认 clang）
USE_CUSTOM_CLANG=false
CUSTOM_CLANG_SOURCE=
CUSTOM_CLANG_BRANCH=
CUSTOM_CMDS:CLANG_TRIPLE=aarch64-linux-gnu-
CLANG_BRANCH=master-kernel-build-2022
CLANG_VERSION=r450784e

# GCC 设置（保持默认）
ENABLE_GCC_ARM64=true
ENABLE_GCC_ARM32=true
USE_CUSTOM_GCC_64=false
CUSTOM_GCC_64_SOURCE=
CUSTOM_GCC_64_BRANCH=
CUSTOM_GCC_64_BIN=aarch64-linux-android-
USE_CUSTOM_GCC_32=false
CUSTOM_GCC_32_SOURCE=
CUSTOM_GCC_32_BRANCH=
CUSTOM_GCC_32_BIN=arm-linux-androideabi-

# KernelSU 设置（开启，使用最新版）
ENABLE_KERNELSU=true
# 不指定版本标签，自动使用最新稳定版
# KERNELSU_TAG=
KSU_EXPECTED_SIZE=
KSU_EXPECTED_HASH=

# 内核功能配置
ADD_KPROBES_CONFIG=true
ADD_OVERLAYFS_CONFIG=false
DISABLE-LTO=false
DISABLE_CC_WERROR=false
APPLY_KSU_PATCH=false
REMOVE_UNUSED_PACKAGES=true


# AnyKernel3 打包设置（使用默认）
USE_CUSTOM_ANYKERNEL3=false
CUSTOM_ANYKERNEL3_SOURCE=
CUSTOM_ANYKERNEL3_BRANCH=

# Ccache 缓存（开启）
ENABLE_CCACHE=true

# DTBO 镜像（编译时不生成，保持 false）
NEED_DTBO=false

# 构建 boot 镜像（false，使用 AnyKernel3 打包）
BUILD_BOOT_IMG=false
SOURCE_BOOT_IMAGE=https://raw.githubusercontent.com/xiaoleGun/KernelSU_action/main/boot/boot.img
